# =============================================================================
# Benji Trading Dashboard - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env files with real credentials to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_URL=jdbc:postgresql://localhost:5432/trader
POSTGRES_USER=trader
POSTGRES_PASSWORD=your_secure_password_here
# Alternative Spring-native config (used if POSTGRES_* not set)
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/trader
SPRING_DATASOURCE_USERNAME=trader
SPRING_DATASOURCE_PASSWORD=your_secure_password_here
SPRING_FLYWAY_ENABLED=true

# -----------------------------------------------------------------------------
# Spring Profile
# -----------------------------------------------------------------------------
# Options: dev, test, prod
SPRING_PROFILES_ACTIVE=dev

# -----------------------------------------------------------------------------
# Market Data API (AlphaVantage)
# -----------------------------------------------------------------------------
# Get your free API key at: https://www.alphavantage.co/support/#api-key
MARKETDATA_API_KEY=your_alphavantage_api_key
ALPHA_VANTAGE_API_KEY=your_alphavantage_api_key
MARKETDATA_HEALTH_SYMBOL=SPY
MARKETDATA_HEALTH_CACHE_TTL=PT1M

# Retry configuration for market data requests
TRADING_MARKETDATA_RETRY_MAX_ATTEMPTS=3
TRADING_MARKETDATA_RETRY_INITIAL_BACKOFF=PT0.5S
TRADING_MARKETDATA_RETRY_MAX_BACKOFF=PT5S

# -----------------------------------------------------------------------------
# API Security
# -----------------------------------------------------------------------------
# API key required for all /api/* endpoints in production
# Generate a secure random key: openssl rand -base64 32
TRADING_API_KEY=your_secure_api_key_here
TRADING_API_KEY_HEADER=X-API-KEY

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins for CORS
# Leave empty to block all cross-origin requests
TRADING_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
TRADING_RATE_LIMIT_ENABLED=true
TRADING_RATE_LIMIT_REQUESTS_PER_MINUTE=100
# Lower limit for quote endpoints to protect AlphaVantage quota
TRADING_RATE_LIMIT_QUOTE_REQUESTS_PER_MINUTE=30

# -----------------------------------------------------------------------------
# Cache Configuration
# -----------------------------------------------------------------------------
TRADING_CACHE_QUOTES_TTL=PT30S
TRADING_CACHE_QUOTES_MAXIMUM_SIZE=1024

# -----------------------------------------------------------------------------
# Actuator/Management Endpoints
# -----------------------------------------------------------------------------
MANAGEMENT_USERNAME=actuator
MANAGEMENT_PASSWORD=your_secure_management_password

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
SERVER_PORT=8080
